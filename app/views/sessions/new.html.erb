<div id="login-page" class="row">
  <div class="col s12 z-depth-1 card-panel">
    <%= form_for(:sessions, url: login_path) do |f| %>
        <div class="row">
          <div class="input-field col s12 center">
            <h4 class="center"><%= (t 'login').html_safe %></h4>
          </div>
        </div>
        <%= render 'layouts/messages' %>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">account_circle</i>
            <%= f.email_field :email, { :class => 'validate' } %>
            <%= f.label :email %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock</i>
            <%= f.password_field :password %>
            <%= f.label :password %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.button :class => 'btn waves-effect waves-light col s12' do %>
                <%= (t 'login').html_safe %>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>